<head>
  <%= stylesheet_link_tag    'cameras', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<div class="container-fluid">
	<div class="row border-bottom title-and-sign_out-div">
        <div class="col-md-8">
            <div>
                <h5 class="mt-3 mb-0 font-italic font-weight-bold blue-header"> ДОСРОЧНЫЕ ВЫБОРЫ </h5>
                <h5 class="pb-0 mb-3 mt-0 font-italic font-weight-bold red-header "> ГУБЕРНАТОРА ОРЛОВСКОЙ ОБЛАСТИ </h5>
            </div>
        </div>
        <div class="col-md-4 align-self-center" style="text-align: right;">
            <%= button_to 'Выйти', destroy_user_session_path, class: "btn btn-sign_out", :method => :delete  %>
        </div>
    </div>
    <div class="row">
        <% if user_signed_in? %>
            <% @cameras.each do |camera| %>
                <div class="col-md-3 col-xs-3 col-3">
                    
                    <iframe width=width height=height src="<%= camera.link %>"></iframe>
                    <p> <strong>Участок <%=
                    if camera.refer_area_code =~ /\A[-+]?[0-9]*\.?[0-9]+\Z/ #check if numeric
                        "№" + "%03d" % camera.refer_area_code
                    else
                        camera.refer_area_code
                    end %> | </strong>

                    <strong >Камера:
                        <%= camera.camera_number %>
                    </strong>
                    </p>
                </div>
            <% end %>
        <% else %>
            <h1>Sign in to see this page</h4>
        <% end %>
    </div>
</div>


<% if false %>

<% if user_signed_in? %>
    <% @cameras.each do |camera| %>
        <p>
        <strong>Участок <%=
        if camera.refer_area_code =~ /\A[-+]?[0-9]*\.?[0-9]+\Z/ #check if numeric
            "№" + "%03d" % camera.refer_area_code
        else
            camera.refer_area_code
        end %> | </strong>

        <strong >Камера:
        <%= camera.camera_number %>
        </strong>
        </p>

        <iframe width="400" height="220" src="<%= camera.link %>"></iframe>

    <% end %>
<% else %>
<h1>Sign in to see this page</h4>

<% end %>

<% end %>